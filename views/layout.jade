    aside
      nav.nv-container
        ul.nv-items
          li.nv-item
            a(href='/') About
          li.nv-item
            a(href='/getting-started') Getting Started
          li.nv-item
            a(href='/api') API Documentation
          li.nv-item
            a(href='/complements') Complementary Modules
          li.nv-item
            a(href='/performance') Performance Optimization
          li.nv-item
            a(href='/source-code') Source Code
          li.nv-item
            a(href='/changelog') Changelog

    main#application-root(data-taunus='model')!=partial
    script(src='/js/all.js')
